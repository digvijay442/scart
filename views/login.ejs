<% include partials/header %>
<style>
body{
  padding: 50px;
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif;
	background: #eee !important;	
}
</style>

<div class="wrapper">
    <form class="form-signin" action="/login" method='post' data-parsley-validate="" data-parsley-trigger="keyup">       
      <h2 class="form-signin-heading">Login</h2>

      <% if(message.length > 0) { %>
            <div class="alert alert-danger"> <%= message %> </div>
        <%}%>


      <input type="text" class="form-control" name="username" placeholder="Email Address" required="" autofocus="" data-parsley-required-message="Please enter Username" />
      <input type="password" class="form-control" name="password" placeholder="Password" required="" data-parsley-required-message="Please enter Password"/>      
      <!-- <label class="checkbox">
        <input type="checkbox" value="remember-me" id="rememberMe" name="rememberMe"> Remember me
      </label> -->
      <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button> 
      <p>
        New User? <a href="/signup">Signup</a>
      </p>
    </form>
  </div>

  <% include partials/footer %>