<% include partials/header %>

<div class="wrapper">
    <form class="form-signin" action="/signup" method="post" data-parsley-validate="" data-parsley-trigger="keyup">       
      <h2 class="form-signin-heading">Sign up</h2>

      <% if(message.length > 0) { %>
        <div class="alert alert-danger"> <%= message %> </div>
    <%}%>

      <div class="form-group">
			<label form-signin><b>Name</b></label>
            <input type="text" class="form-control" name="name" placeholder="Name"  required="" autofocus="" data-parsley-minlength="2"  data-parsley-required-message="Please enter name" data-parsley-pattern="^[A-Za-z\s]*$" />
        </div>
        <div class="form-group">
            <label><b>Email</b></label>
            <input type="text" class="form-control" name="username" placeholder="Email"  required="" data-parsley-required-message="Email field can not empty" data-parsley-type="email" />
        </div>
        <div class="form-group">
            <label><b>Password</b></label>
            <input type="password" class="form-control" name="password" placeholder="password"  required="" data-parsley-required-message="Please enter password" data-parsley-pattern="(?=.*[a-z])(?=.*[A-Z]).*" data-parsley-pattern-message="Your password must contain at least (1) lowercase and (1) uppercase letter." />
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button> 
      <p>
        Already Registerd? <a href="/">Login</a>
      </p>
    </form>
  </div>

  <% include partials/footer %>